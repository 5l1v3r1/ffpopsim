# Description:
# ------------
# The next lines try to guess whether you are on an Apple computer (Darwin)
# or on another *nix computer, and to set some platform-dependent variables.
##==========================================================================
ifeq ($(shell uname), Darwin)
    PYTHON_PREFIX := /Library/Frameworks/EPD64.framework/Versions/Current
    PYTHON_LD_FLAGS_PLATFORM := -dynamiclib -flat_namespace -undefined suppress
else
    PYTHON_PREFIX := /usr
    PYTHON_LD_FLAGS_PLATFORM := -shared
endif

#############################################################################
# FIXME: THIS PARAGRAPH MUST SOMEHOW DISAPPEAR FROM THE FINAL VERSION       #
#############################################################################
ifeq ($(shell hostname), congo)
    PYTHON_PREFIX := /ebio/ag-neher/share/epd_free-7.1-2-rh5-x86_64/
endif
#############################################################################

# Can we compile the documentation?
ifdef DOXY
    doc := $(shell which $(DOXY) > /dev/null && echo doc)
endif

# Can we compile Python bindings?
ifdef PYTHON
    python := $(shell which $(PYTHON) > /dev/null && echo python)
endif
